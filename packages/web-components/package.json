{
  "name": "@ootmm/web-components",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsx ./build.ts",
    "deploy": "./deploy.sh"
  },
  "author": "Nax",
  "license": "MIT",
  "dependencies": {
    "@ootmm/gui": "*"
  },
  "nx": {
    "targets": {
      "deploy": {
        "cache": false,
        "dependsOn": ["build"]
      },
      "build": {
        "inputs": [
          "{projectRoot}/**/*",
          { "env": "VERSION" }
        ],
        "outputs": [
          "{projectRoot}/dist/**/*"
        ],
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
