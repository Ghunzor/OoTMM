{
  "name": "@ootmm/web-components",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsx ./build.ts prod",
    "build:dev": "tsx ./build.ts dev",
    "deploy": "./deploy.sh"
  },
  "author": "Nax",
  "license": "MIT",
  "dependencies": {
    "@ootmm/gui": "*"
  },
  "nx": {
    "targets": {
      "deploy": {
        "dependsOn": ["build"]
      },
      "build": {
        "inputs": [
          "{projectRoot}/**/*"
        ],
        "outputs": [
          "{projectRoot}/dist/**/*"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "build:dev": {
        "inputs": [
          "{projectRoot}/**/*"
        ],
        "outputs": [
          "{projectRoot}/dist/**/*"
        ],
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
